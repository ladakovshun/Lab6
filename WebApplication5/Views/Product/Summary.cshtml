@model List<WebApplication5.Models.Product>

<div class="container mt-5">
    <h2 class="text-center mb-4">Your Order Summary</h2>

    <ul class="list-group">
        @foreach (var product in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@product.Name: @product.Quantity units</span>
                <span class="badge badge-primary badge-pill">@product.Price $ per unit</span>
            </li>
        }
    </ul>

    <p class="text-right mt-4">
        <strong>Total Price: <span class="text-success">@ViewBag.TotalPrice</span> $</strong>
    </p>
</div>

